# Actual Budget API configuration
ACTUAL_SERVER_URL=
ACTUAL_PASSWORD=
ACTUAL_SYNC_ID=
ACTUAL_BUDGET_ENCRYPTION_PASSWORD=

# Enable shim for Node>=20 guard in @actual-app/api (daemon only)
ENABLE_NODE_VERSION_SHIM=false

# Logging level (info, debug, error)
LOG_LEVEL=info

# HTTP port for web UI server (daemon mode only; enables UI)
HTTP_PORT=3000

# Session-based Web UI authentication (disable login with UI_AUTH_ENABLED=false)
UI_AUTH_ENABLED=true

# Shared secret for signing session cookies (defaults to ACTUAL_PASSWORD)
SESSION_SECRET=

# AlphaVantage API key (required for alphavantage data provider)
# AlphaVantage API key (required for alphavantage data provider)
ALPHAVANTAGE_API_KEY=
# Finnhub API key (required for finnhub data provider)
FINNHUB_API_KEY=
# TwelveData API key (required for twelvedata data provider)
TWELVEDATA_API_KEY=

# Disable cron scheduling (daemon mode only; default: false)
DISABLE_CRON_SCHEDULING=false

# Cron schedule for sync (hourly, at minute 0)
SYNC_CRON="45 * * * *"
SYNC_CRON_TIMEZONE=UTC

# Path to directory to store mapping and other data
DATA_DIR=./data

# Path to directory for Actual Budget cache (budget files)
BUDGET_DIR=./data/budget
