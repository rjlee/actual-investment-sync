<%- include('header', { title }) %>
<div class="container py-5">
  <h1 class="text-center mb-4">actual-investment-sync</h1>
  <div class="position-relative mb-4">
    <span id="budgetStatus" class="badge bg-info position-absolute start-50 translate-middle-x">Budget downloading</span>
    <% if (showLogoutButton) { %>
    <form method="post" action="/auth/logout" class="position-absolute end-0 top-0 m-0">
      <button type="submit" class="btn btn-warning">Logout</button>
    </form>
    <% } %>
  </div>
  <div id="stocksConfig" class="mb-4">
    <h2>Stocks</h2>
    <div id="stocks"></div>
    <button id="addStockBtn" class="btn btn-secondary">Add Stock</button>
  </div>

  <div id="portfolioConfig" class="mb-4">
    <h2>Portfolios</h2>
    <div id="portfolios"></div>
    <button id="addPortfolioBtn" class="btn btn-secondary">Add Portfolio</button>
  </div>

  <div class="d-flex align-items-center gap-2 flex-wrap">
    <button id="saveBtn" class="btn btn-primary">Save Portfolios</button>
    <button id="syncBtn" class="btn btn-success">Sync Now</button>
    <div class="d-flex align-items-center gap-2">
      <label class="form-label m-0" for="exportFormat">Export:</label>
      <select id="exportFormat" class="form-select form-select-sm w-auto">
        <option value="positions">Positions (per holding)</option>
        <option value="holdings">Holdings by Stock</option>
      </select>
      <button id="exportBtn" class="btn btn-outline-primary btn-sm">Export CSV</button>
    </div>
    <span id="status"></span>
  </div>
</div>
  <script src="./js/index.js"></script>
<%- include('footer') %>
